<script src="/socket.io/socket.io.js"></script>
<script>
  var socket = io();

  var inputEmail = document.getElementById('email');
  var inputPassword = document.getElementById('password');
  var myModal = new bootstrap.Modal(document.getElementById('exampleModal'), { keyboard: false });
  var modalMsg = document.getElementById('modalMessage');
  var btn = document.getElementById('loginBtn');
  var loading = document.getElementById('loading');

  var myEvCode = localStorage.getItem("evCode");
  var myPhoneNumber = localStorage.getItem("phone");

  const testData = {
        phoneNumber: myPhoneNumber,
        evaluationCode: myEvCode,
        }

 loading.style.display = "none"
  btn.disabled = true;
if(((myEvCode && myPhoneNumber) != "")&&((myEvCode && myPhoneNumber) != null)){
        const jsonContent = JSON.stringify(testData);
        socket.emit('logMeIn', jsonContent)
}else{
  btn.disabled = false;
}

socket.on('logMeInResp', (msg) => {
        if(msg == "granted"){
          window.location.href = "/dashboard"
          btn.style.background = "Green"
          loading.style.display = "none"
        }else if(msg == "failed"){
          modalMsg.innerHTML = "کاربری با این مشخصات یافت نشد";
          myModal.show();
          loading.style.display = "none"
          btn.disabled = false;
        }
        });


function signInBtn(){
if(inputEmail.value == "" | inputPassword.value == ""){
  modalMsg.innerHTML = "فیلد ورودی نباید خالی باشد";
  myModal.show();
}else{
  const testData = {
        phoneNumber: inputEmail.value,
        evaluationCode: inputPassword.value,
        }
        btn.disabled = true;
        loading.style.display = "";
        const jsonContent = JSON.stringify(testData);
        socket.emit('logMeIn', jsonContent);
        socket.phoneNumber = inputEmail.value;
        socket.evaluationCode = inputPassword.value;
        localStorage.setItem("evCode",inputPassword.value);
        localStorage.setItem("phone", inputEmail.value);
}
  }

</script>




